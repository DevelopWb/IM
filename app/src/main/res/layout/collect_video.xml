<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/receiver_pic_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/collect_video_iv"
            android:layout_width="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/receiver_play_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/play_button"
            app:layout_constraintBottom_toBottomOf="@+id/collect_video_iv"
            app:layout_constraintLeft_toLeftOf="@+id/collect_video_iv"
            app:layout_constraintRight_toRightOf="@+id/collect_video_iv"
            app:layout_constraintTop_toTopOf="@+id/collect_video_iv" />

    </android.support.constraint.ConstraintLayout>

    <include layout="@layout/collect_from_layout" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/file_base_info_ll"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/receiver_file_tag_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/my_hint_head" />

        <TextView
            android:id="@+id/receiver_file_name_tv"
            android:layout_width="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="dfadsfa"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/receiver_file_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="文件大小："
            android:textColor="@color/black"
            android:textSize="10dp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/file_detail_progress_ll"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在接收文件"
            android:textColor="@color/black"
            android:textSize="10dp" />

        <ProgressBar
            android:id="@+id/file_progress_pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_marginTop="15dp"
            android:layout_height="25dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/file_detail_button_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/file_detail_button_tv"
            android:layout_width="160dp"
            android:text="用其他应用打开"
            style="@style/bt_style"/>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/display_file_fl"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent" />




</LinearLayout>
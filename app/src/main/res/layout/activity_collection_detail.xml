<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/msg_from_tv"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SmallSp" />

        <View
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
            android:layout_height="1px" />
    </LinearLayout>


    <com.juntai.disabled.video.img.PhotoView
        android:id="@+id/collect_iv"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content" />

    <com.juntai.disabled.video.CustomStandardNoUiGSYVideoPlayer
        android:id="@+id/videoplay_cp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
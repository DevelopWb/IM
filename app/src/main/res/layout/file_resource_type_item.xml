<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/gray_light"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/file_resource_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/app_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/file_resource_selected_tag_tv"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:layout_marginRight="30dp"
        android:src="@mipmap/right_duihao_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/file_resource_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@+id/file_resource_iv"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/file_resource_div"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
        app:layout_constraintLeft_toLeftOf="@+id/file_resource_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/file_resource_name_tv"></View>
</android.support.constraint.ConstraintLayout>
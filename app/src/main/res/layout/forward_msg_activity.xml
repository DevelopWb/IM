<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/search_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="15dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="搜索联系人"
        android:drawableLeft="@mipmap/search_icon"
        android:layout_marginTop="10dp"
        android:background="@drawable/sp_filled_gray_lighter">

    </TextView>


    <fragment
        android:id="@+id/select_contact_fg"
        class="com.juntai.wisdom.im.chatlist.chat.forwardMsg.SelectGroupAndContactFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"></fragment>
</LinearLayout>
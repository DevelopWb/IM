<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/sp_filled_gray_lighter"
    android:layout_height="45dp">
    <ImageView
        android:id="@+id/chat_record_file_type_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/my_hint_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/chat_record_file_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="dfadsfa"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/chat_record_file_type_iv"
        app:layout_constraintTop_toTopOf="@+id/chat_record_file_type_iv" />

    <TextView
        android:id="@+id/chat_record_file_size_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:text="个人名片"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_record_file_type_iv"
        app:layout_constraintLeft_toLeftOf="@+id/chat_record_file_name_tv"
        app:layout_constraintRight_toRightOf="@+id/chat_record_file_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/chat_record_file_name_tv"></TextView>


</android.support.constraint.ConstraintLayout>
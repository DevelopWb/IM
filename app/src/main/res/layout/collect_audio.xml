<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/receiver_pic_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"

        >

        <ImageView
            android:id="@+id/collect_audio_iv"
            android:layout_width="35dp"
            android:src="@mipmap/collect_audio_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/audio_time_iv"
            android:layout_width="wrap_content"
            android:text="dfadfa"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@+id/collect_audio_iv"
            app:layout_constraintBottom_toBottomOf="@+id/collect_audio_iv"
            app:layout_constraintLeft_toRightOf="@+id/collect_audio_iv"
            android:layout_height="wrap_content"
            />

    </android.support.constraint.ConstraintLayout>

    <include layout="@layout/collect_from_layout" />
</LinearLayout>
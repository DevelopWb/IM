<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/key_value_ll"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/bg_pre_line"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/item_key_tv"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical|left"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_value_tv"
        android:layout_width="0dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@+id/item_key_tv"
        android:layout_height="match_parent"
        app:layout_constraintRight_toLeftOf="@+id/arrow_tag"
        android:gravity="center|right"
        android:singleLine="true"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/arrow_tag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@mipmap/arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_cl"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <ImageView
        android:id="@+id/item_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/my_hint_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:lines="1"
        android:text="dfadsfa"
        app:layout_constraintRight_toLeftOf="@+id/add_tag"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/item_content_tv"
        app:layout_constraintLeft_toRightOf="@+id/item_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="dfasdfasd"
        android:textSize="12dp"
        app:layout_constraintRight_toLeftOf="@+id/add_tag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/item_name"
        app:layout_constraintTop_toBottomOf="@+id/item_name" />


    <TextView
        android:id="@+id/add_tag"
        style="@style/bt_style"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="0dp"
        android:text="已添加"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/item_divider_v"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/item_name"
        app:layout_constraintRight_toRightOf="parent"></View>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_cl"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/msg_sender_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/my_hint_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/msg_sender_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="dfadsfa"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/msg_sender_iv"
        app:layout_constraintRight_toLeftOf="@+id/msg_sender_sendtime_tv"
        app:layout_constraintTop_toTopOf="@+id/msg_sender_iv" />

    <FrameLayout
        android:id="@+id/msg_sender_content_fl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/msg_sender_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg_sender_name_tv" />

    <TextView
        android:id="@+id/msg_sender_sendtime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="dfadf"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/msg_sender_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/msg_sender_name_tv"></TextView>

    <View
        android:id="@+id/item_divider_v"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="#E0E0E0"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/msg_sender_content_fl"
        app:layout_constraintLeft_toLeftOf="@+id/msg_sender_name_tv"
        app:layout_constraintRight_toRightOf="parent"></View>

</android.support.constraint.ConstraintLayout>